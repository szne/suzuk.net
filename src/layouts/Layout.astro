---
/** 受け取り可能なプロパティ（任意） */
interface Props {
  title?: string;
  description?: string;
}
const { title = "Kohei Suzuki - Portfolio", description = "Portfolio of Kohei Suzuki" } = Astro.props;

import "../styles/global.css"; // tailwind
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OGP最小 -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og.png" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>

  <body class="bg-white text-zinc-900 dark:bg-zinc-950 dark:text-zinc-100">
    <!-- メイン -->
    <main id="main" class="mx-auto max-w-3xl px-4 py-10 space-y-12">
      <slot /> <!-- ← 各ページの中身がここに入る -->
    </main>
  </body>
</html>
